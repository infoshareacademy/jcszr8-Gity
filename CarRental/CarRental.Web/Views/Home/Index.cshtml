@using CarRental.Web.Controllers;
@model CarRental.Logic.SearchViewModelDto;

@{
    ViewData["Title"] = "Home Page";
}

<div class="p-0 text-center bg-image" style="
      background-image: url('images/bg_1.jpg');
      height: 500px;
    ">

    <div class="mask" style="background-color: rgba(0, 0, 0, 0.6); height: 500px;">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="text-white">
                <h1>Car Rental – Search, Compare & Save</h1>
                <h2>Free cancellations on most bookings 60,000+ locations Customer support in 40+ languages</h2>
                <form class="d-flex" asp-controller="Car" asp-action="Search" method="post">
                    <input class="form-control me-2 search" asp-for="ModelAndMake" type="text" placeholder="Search" aria-label="Search">
                    <input class="form-control year" asp-for="ProductionYearFrom" />
                    <input class="form-control year" asp-for="ProductionYearTo" />
                    <input type="date" class="form-control date" asp-for="StartDate"/>
                    <input type="date" class="form-control date" asp-for="EndDate"/>
                    <button class="btn btn-outline-success" type="submit" >Search</button>
                </form>
            </div>
        </div>
    </div>
</div>


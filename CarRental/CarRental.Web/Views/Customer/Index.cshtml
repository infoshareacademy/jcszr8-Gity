@model IEnumerable<CarRental.Logic.Models.CustomerModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Customers</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary text-dark">
                <i class="bi bi-plus-circle text-dark"></i> &nbsp; Add New Customer
            </a>
        </div>
    </div>

    <div>
        <partial name="_CustomerListTable" , model="Model" />
    </div>
</div>

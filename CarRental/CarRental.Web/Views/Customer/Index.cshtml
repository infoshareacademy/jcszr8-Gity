@model IEnumerable<CarRental.DAL.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    @await Component.InvokeAsync("ButtonComponent", new { text = "Click me", color = "secondary" })
</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary text-dark">
                <i class="bi bi-plus-circle text-dark"></i> &nbsp; Add New Customer
            </a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().FirstName"></label>)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <partial name="_CustomerRow", model="item" />
        }
    </tbody>
</table>
